extends layout

block content
    h1 Add Goods
    form.form-goods-modify(action="#{actionUrl}", method="post")
        div
            label(for="title") Title
            input#title(type="text", name="title", value="#{form.title ? form.title : ''}")
        div
            label(for="content") Content
            textarea#content(name="content") #{form.content ? form.content : ''}
        div
            label(for="tags") Tags
            input#tags(type="text", name="tags", value="#{form.tags ? form.tags : ''}")
        hr
        div
            input(type="submit", value="Submit")