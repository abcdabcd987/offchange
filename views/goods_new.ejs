<% include head %>

<form role="form" action="/goods/new" method="post" enctype="multipart/form-data">
  <div class="form-group">
    <label for="title">Title</label>
    <input type="text" class="form-control" id="title" placeholder="Simple words about the goods" name="title" value="<%= typeof(form.title) === 'undefined' ? '' : form.title %>">
  </div>
  <div class="form-group">
    <label for="content">Description</label>
    <textarea name="content" id="content" placeholder="Describe the goods in detail." class="form-control" rows="7"><%= typeof(form.content) === 'undefined' ? '' : form.content %></textarea>
  </div>
  <div class="form-group">
    <label>Upload Image</label>
    <div class="upload-group">
      <input type="file" class="form-control" name="images[0]">
    </div>
    <a class="btn btn-default add-upload">Add an image</a>
  </div>
  <div class="form-group">
    <label for="tags">Tags</label>
    <input type="text" class="form-control" id="tags" placeholder="Classify the goods, use ',' to split up." name="tags" value="<%= typeof(form.tags) === 'undefined' ? '' : form.tags %>">
  </div>
  <button type="submit" class="btn btn-primary">Post</button>
</form>

<!--foot-->
</div>
<script src="http://libs.baidu.com/jquery/1.10.2/jquery.min.js"></script>
<script src="http://libs.baidu.com/bootstrap/3.0.3/js/bootstrap.min.js"></script>
<script>
var totfiles = 1;
$(".add-upload").on('click', function(e) {
  e.preventDefault();
  $('.upload-group').append('<input type="file" class="form-control" name="images['+ (totfiles++) +']">');
  return false;
})
</script>
</body>
</html>