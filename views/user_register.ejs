<% include head %>

<form class="form-horizontal" role="form" action="/user/register" method="post">
  <h2>Register</h2>
  <div class="form-group">
    <label for="username" class="col-sm-2 control-label">Username</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="username" placeholder="Username" name="name" required autofocus value="<%= typeof(form.name) === 'undefined' ? '' : form.name %>">
    </div>
  </div>
  <div class="form-group">
    <label for="password" class="col-sm-2 control-label">Password</label>
    <div class="col-sm-10">
      <input type="password" class="form-control" id="password" placeholder="Password" name="password" required>
    </div>
  </div>
  <hr>
  <span class="help-block">Optional Information</span>
  <div class="form-group">
    <label for="wechat" class="col-sm-2 control-label">WeChat</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="wechat" placeholder="WeChat" name="wechat" value="<%= typeof(form.wechat) === 'undefined' ? '' : form.wechat %>">
    </div>
  </div>
  <div class="form-group">
    <label for="phone" class="col-sm-2 control-label">Phone</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="wechat" placeholder="Mobile Phone Number" name="phone" value="<%= typeof(form.phone) === 'undefined' ? '' : form.phone %>">
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-primary">Register</button>
    </div>
  </div>
</form>

<% include foot_script %>
<script src="http://crypto-js.googlecode.com/svn/tags/3.1.2/build/rollups/sha256.js"></script>
<script>
$('form').on('submit', function(e) {
    var passwd = $('input[type="password"]');
    for (var i = 0; i < passwd.size(); ++i) {
      var current = passwd.get(i);
      var tohash = '<%= settings.frontSalt %>' + current.value;
      current.value = CryptoJS.SHA256(tohash);
    }
    return true;
});
</script>
<% include foot_close %>